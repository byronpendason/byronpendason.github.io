---
sitemap:
  exclude: 'yes'
---

[
  {% for post in site.pages %}{% unless post.sitemap.exclude == 'yes' or post.name == 'feed.xml' or post.name == 'style.css' %}
    {
      "title"    : "{{ post.title }}",
      "url"      : "{{ site.url }}{{ post.url }}",
      "date"     : "{{ post.date | date_to_string }}",
      "description" : "{{ post.content | strip_html | strip_newlines | escape | truncate:500 }}"
    },
  {% endunless %}{% endfor %}
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title }}",
      "url"      : "{{ site.url }}{{ post.url }}",
      "date"     : "{{ post.date | date_to_string }}",
      "description" : "{{ post.excerpt | strip_html | strip_newlines | escape | truncate:500 }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
